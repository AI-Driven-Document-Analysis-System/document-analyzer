# Application Settings
APP_NAME=DocAnalyzer API
APP_VERSION=1.0.0
DEBUG=False

# Server Settings
HOST=0.0.0.0
PORT=8000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Document Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAX_HISTORY_LENGTH=10

# LLM Default Settings
DEFAULT_LLM_PROVIDER=groq
DEFAULT_LLM_MODEL=llama3-8b-8192
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS Origins
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File Storage
UPLOAD_DIR=storage/documents
MAX_FILE_SIZE=50000000  # 50MB
ALLOWED_FILE_TYPES=[".pdf", ".txt", ".docx", ".doc", ".md"]

# Vector Database Settings
VECTOR_DB_PATH=./chroma_db
COLLECTION_NAME=documents

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=documents
MINIO_SECURE=false

# AI/ML Settings
MODEL_NAME=llama3-8b-8192
MAX_TOKENS=1000
TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Environment
ENVIRONMENT=development

# ========================================
# PLACEHOLDER SECTIONS - REPLACE WITH ACTUAL VALUES
# ========================================

# HOSTED DATABASE (Aiven PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Individual database parameters
DB_HOST=your-database-host.com
DB_PORT=5432
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name

# Alternative database settings (uppercase)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=docanalyzer
DATABASE_USER=postgres
DATABASE_PASSWORD=your-local-database-password

# LLM API Keys
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Security (Replace in production)
SECRET_KEY=your-secret-key-here-change-in-production

# Google OAuth (for frontend)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# AWS Configuration (for Textract OCR)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# OCR Provider Selection (aws_textract or surya)
OCR_PROVIDER=aws_textract
